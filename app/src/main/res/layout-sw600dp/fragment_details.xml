<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="example.normeow.sunshine.DetailActivityFragment"
    android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_day_textview"
            android:text="Today"
            android:textSize="@dimen/text_22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_date_textview"
            android:text="June 15"
            android:textSize="@dimen/text_22sp"
            android:textColor="@color/grey"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/left_block"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/center_block"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_high_textview"
            android:text="22"
            android:textSize="@dimen/detail_temperature_high"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_low_textview"
            android:text="12"
            android:layout_marginLeft="16dp"
            android:textSize="@dimen/detail_temperature_low"
            android:textColor="@color/grey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/details_weather_pic"
                android:layout_width="@dimen/details_weather_pic"
                android:layout_height="@dimen/details_weather_pic"
                android:layout_gravity="center"
                android:src="@drawable/art_clear"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weather_state_details_textview"
                android:text="Clear"
                android:gravity="center"
                android:textSize="@dimen/text_22sp"
                android:textColor="@color/grey"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidity_tv"
        android:textSize="@dimen/text_22sp"
        android:text="Humidity: 71%"
        android:paddingBottom="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pressure_tv"
        android:textSize="@dimen/text_22sp"
        android:text="Pressure: 1016"
        android:paddingBottom="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wind_tv"
        android:textSize="@dimen/text_22sp"
        android:text="Humidity: 71%"/>

</LinearLayout>
